{#
    Available variables:
    * entity       - Issue entity or null
    * indexer_item - indexer item Oro\Bundle\SearchBundle\Query\Result\Item
#}
{% extends 'OroSearchBundle:Search:searchResultItem.html.twig' %}

{% set recordUrl = indexer_item.recordUrl %}
{% set title = entity ? entity.summary : indexer_item.recordTitle %}

{% set entityType = 'ap.bugtracker.issue.entity_label'|trans %}
{% set showImage = false %}
{% set image = false     %}
{% set entityInfo = [
    {'title': 'ap.bugtracker.issue.summary.label'|trans, 'value': entity.summary},
    {'title': 'ap.bugtracker.issue.type.label'|trans, 'value': entity.type},
    {'title': 'ap.bugtracker.issue.priority.label'|trans, 'value': entity.priority.label},
    {
        'title': 'ap.bugtracker.issue.reporter.label'|trans,
        'value': entity.reporter ? entity.reporter|oro_format_name|escape : 'N/A'
    },
    {
        'title': 'ap.bugtracker.issue.assignee.label'|trans,
        'value': entity.assignee ? entity.assignee|oro_format_name|escape : 'N/A'
    },
    {'title': 'oro.ui.created_at'|trans, 'value': entity.createdAt ? entity.createdAt|oro_format_datetime : 'N/A'},
    {'title': 'oro.ui.updated_at'|trans, 'value': entity.updatedAt ? entity.updatedAt|oro_format_datetime : 'N/A'},
] %}
