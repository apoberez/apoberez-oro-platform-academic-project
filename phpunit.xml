<?xml version="1.0" encoding="UTF-8"?>

<!-- https://phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit
        backupGlobals               = "false"
        backupStaticAttributes      = "false"
        colors                      = "false"
        convertErrorsToExceptions   = "true"
        convertNoticesToExceptions  = "true"
        convertWarningsToExceptions = "true"
        processIsolation            = "false"
        stopOnFailure               = "false"
        syntaxCheck                 = "false"
        bootstrap                   = "vendor/autoload.php"
>
    <testsuites>
        <testsuite name="Project Unit Tests">
            <directory suffix="Test.php">src/AP/*/*/Tests/Unit</directory>
        </testsuite>
        <testsuite name="Project Functional Tests">
            <directory suffix="Test.php">src/AP/*/*/Tests/Functional</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>src</directory>
            <exclude>
                <directory>vendor</directory>
                <directory>src/AP/Bundle/*Bundle/DataFixtures</directory>
                <directory>src/AP/Bundle/*Bundle/Resources</directory>
                <directory>src/AP/Bundle/*Bundle/Tests</directory>
                <directory>src/AP/Bundle/*Bundle/vendor</directory>
                <directory>src/AP/Component/TestUtils</directory>
            </exclude>
        </whitelist>
    </filter>

</phpunit>
