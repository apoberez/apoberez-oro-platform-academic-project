{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroTagBundle::macros.html.twig' as tag %}

{% block navButtons %}
    {% if canHaveSubtask and resource_granted('CREATE', entity) %}
        {{ UI.button({
            'path' : path('bug_tracker.issue_subtask_create', { id: entity.id }),
            'label': 'ap.bug_tracker.button.create_subtask'|trans
        }) }}
    {% endif %}

    {% if resource_granted('EDIT', entity) %}
        {{ UI.editButton({
            'path' : path('bug_tracker.issue_update', { id: entity.id }),
            'entity_label': 'ap.bug_tracker.issue_entity.label'|trans
        }) }}
    {% endif %}

    {% if resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('bug_tracker.issue_index', {'id': entity.id}),
            'dataRedirect': path('bug_tracker.issue_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-issue',
            'dataId': entity.id,
            'entity_label': 'ap.bug_tracker.issue_entity.label'|trans,
        }) }}
    {% endif %}

{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {
    'entity':      entity,
    'indexPath':   path('bug_tracker.issue_index'),
    'indexLabel': 'ap.bug_tracker.issue_entity.plural_label'|trans,
    'entityTitle': entity.summary
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {% set data %}
        <div class="widget-content">
            <div class="row-fluid form-horizontal">
                <div class="responsive-block">

                    {%- set assignee -%}
                        {%- if entity.assignee -%}
                            {% if resource_granted('oro_user_user_view') %}
                                <a href="{{ path('oro_user_view', {'id': entity.assignee.id}) }}">
                                    {{ entity.assignee|oro_format_name|escape }}
                                </a>
                            {% else %}
                                {{ entity.assignee|oro_format_name|escape }}
                            {% endif %}
                        {%- endif -%}
                    {%- endset -%}
                    {%- set reporter -%}
                        {%- if entity.reporter -%}
                            {% if resource_granted('oro_user_user_view') %}
                                <a href="{{ path('oro_user_view', {'id': entity.reporter.id}) }}">
                                    {{ entity.reporter|oro_format_name|escape }}
                                </a>
                            {% else %}
                                {{ entity.reporter|oro_format_name|escape }}
                            {% endif %}
                        {%- endif -%}
                    {%- endset -%}

                    {{ UI.renderProperty('ap.bug_tracker.issue_entity.summary_label'|trans, entity.summary) }}
                    {{ UI.renderHtmlProperty('ap.bug_tracker.issue_entity.reporter_label'|trans, reporter) }}
                    {{ UI.renderHtmlProperty('ap.bug_tracker.issue_entity.assignee_label'|trans, assignee) }}
                    {{ UI.renderProperty('ap.bug_tracker.issue_entity.description_label'|trans, entity.description) }}
                    {{ UI.renderProperty('ap.bug_tracker.issue_entity.priority_label'|trans, entity.priority.name|trans) }}
                    {{ UI.renderProperty('ap.bug_tracker.issue_entity.type_label'|trans, entity.type|trans) }}

                    {% if resource_granted('oro_tag_view') %}
                        {{ UI.renderHtmlProperty('oro.tag.entity_plural_label'|trans, tag.renderView(entity)) }}
                    {% endif %}

                </div>
            </div>
        </div>
    {% endset %}
    {% set dataBlocks = [{
        'title': 'ap.bug_tracker.issue_entity.plural_label'|trans,
        'class': 'active',
        'subblocks': [
            { 'data' : [data] }
        ]
    }] %}

    {% set id = 'issueView' %}
    {% set data = { 'dataBlocks': dataBlocks } %}
    {{ parent() }}
{% endblock content_data %}

