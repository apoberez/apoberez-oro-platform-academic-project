{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}

{% block navButtons %}
    {% if resource_granted('EDIT', entity) %}
        {{ UI.editButton({
            'path' : path('bug_tracker.issue_update', { id: entity.id }),
            'entity_label': 'ap.bug_tracker.issue_entity.label'|trans
        }) }}
    {% endif %}

    {% if resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('bug_tracker.issue_index', {'id': entity.id}),
            'dataRedirect': path('bug_tracker.issue_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-vehicle',
            'dataId': entity.id,
            'entity_label': 'ap.bug_tracker.issue_entity.label'|trans,
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {
    'entity':      entity,
    'indexPath':   path('bug_tracker.issue_index'),
    'indexLabel': 'ap.bug_tracker.issue_entity.plural_label'|trans,
    'entityTitle': entity.summary
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {% set data %}
        <div class="widget-content">
            <div class="row-fluid form-horizontal">
                <div class="responsive-block">
                    {{ UI.renderProperty('ap.bug_tracker.issue_entity.summary_label'|trans, entity.summary) }}
                    {{ UI.renderProperty('ap.bug_tracker.issue_entity.description_label'|trans, entity.description) }}
                    {{ UI.renderProperty('ap.bug_tracker.issue_entity.created_at_label'|trans, entity.createdAt|date) }}
                    {{ UI.renderProperty('ap.bug_tracker.issue_entity.updated_at_label'|trans, entity.updatedAt|date) }}
                </div>
            </div>
        </div>
    {% endset %}
    {% set dataBlocks = [{
        'title': 'ap.bug_tracker.issue_entity.plural_label'|trans,
        'class': 'active',
        'subblocks': [
            { 'data' : [data] }
        ]
    }] %}

    {% set id = 'issueView' %}
    {% set data = { 'dataBlocks': dataBlocks } %}
    {{ parent() }}
{% endblock content_data %}

