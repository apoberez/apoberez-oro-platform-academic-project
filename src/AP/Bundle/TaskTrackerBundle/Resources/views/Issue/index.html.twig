{% extends 'OroUIBundle:actions:index.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% set gridName = 'issues-grid' %}
{% set pageTitle = 'Issues'|trans %}

{% block navButtons %}
    {% if resource_granted('task_tracker.issue_create') %}
        <div class="btn-group">
            {{ UI.addButton({
                'path': path('task_tracker.issue_create'),
                'entity_label': 'Issue'|trans
            }) }}
        </div>
    {% endif %}
{% endblock %}